<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/focus_list_nav"
    app:startDestination="@id/todoListFragment">

    <fragment
        android:id="@+id/todoListFragment"
        android:name="id.ac.ui.cs.mobileprogramming.azharaiz.focuslist.fragments.TodoListFragment"
        android:label="TodoListFragment">
        <action
            android:id="@+id/action_todoListFragment_to_addTodoFragment"
            app:destination="@id/addTodoFragment" />
        <action
            android:id="@+id/action_todoListFragment_to_todoUpdateFragment"
            app:destination="@id/todoUpdateFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTodoFragment"
        android:name="id.ac.ui.cs.mobileprogramming.azharaiz.focuslist.fragments.AddTodoFragment"
        android:label="fragment_add_todo"
        tools:layout="@layout/fragment_add_todo">
        <action
            android:id="@+id/action_addTodoFragment_to_todoListFragment"
            app:destination="@id/todoListFragment"
            app:popUpTo="@id/todoListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/todoUpdateFragment"
        android:name="id.ac.ui.cs.mobileprogramming.azharaiz.focuslist.fragments.TodoUpdateFragment"
        android:label="fragment_todo_update"
        tools:layout="@layout/fragment_todo_update">
        <action
            android:id="@+id/action_todoUpdateFragment_to_todoListFragment"
            app:destination="@id/todoListFragment"
            app:popUpTo="@id/todoListFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="currentTodo"
            app:argType="id.ac.ui.cs.mobileprogramming.azharaiz.focuslist.data.Todo" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="id.ac.ui.cs.mobileprogramming.azharaiz.focuslist.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/timerFragment"
        android:name="id.ac.ui.cs.mobileprogramming.azharaiz.focuslist.fragments.TimerFragment"
        android:label="fragment_timer"
        tools:layout="@layout/fragment_timer">
        <action
            android:id="@+id/action_timerFragment_to_timerLogFragment"
            app:destination="@id/timerLogFragment" />
    </fragment>
    <fragment
        android:id="@+id/timerLogFragment"
        android:name="id.ac.ui.cs.mobileprogramming.azharaiz.focuslist.fragments.TimerLogFragment"
        android:label="TimerLogFragment">
        <action
            android:id="@+id/action_timerLogFragment_to_timerFragment"
            app:destination="@id/timerFragment"
            app:popUpTo="@id/timerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/rewardListFragment"
        android:name="id.ac.ui.cs.mobileprogramming.azharaiz.focuslist.fragments.RewardListFragment"
        android:label="fragment_reward_list"
        tools:layout="@layout/fragment_reward_list" />

</navigation>